@model CCP.Models.ChangeLog

@{
    ViewData["Title"] = "Details";
    var changes = ViewBag.Changes as List<string>;
}

<h1>Details</h1>

<div>
    <h4>ChangeLog</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChangeTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChangeTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChangeType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChangeType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt>
            Changes
        </dt>
        <dd>
            <ul>
                @foreach (string change in changes)
                {
                    <li>@change</li>
                }
            </ul>
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
